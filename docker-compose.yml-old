version: '3.8'

services:
  # Main video generation application
  app:
    build: .
    ports:
      - "5000:5000"
    volumes:
      - ./output:/app/output
      - ./temp:/app/temp
    environment:
      - OLLAMA_URL=http://ollama:11434
    depends_on:
      - ollama
    restart: unless-stopped

# Ollama for AI script generation
  ollama:
    image: ollama/ollama:latest
    ports:
      - "11434:11434"
    volumes:
      - ollama_data:/root/.ollama
    restart: unless-stopped

volumes:
  ollama_data:
